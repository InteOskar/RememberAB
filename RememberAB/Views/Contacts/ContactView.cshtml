@model List<RememberAB.Models.ContactsModel>
@{
    ViewBag.Title = "ContactView";
}

<h2>Contact Book</h2>
<br />

@using (Html.BeginForm("ContactView", "Contacts", FormMethod.Post))
{
    <span>Search contact:</span> @Html.TextBox("firstName")
    <input type="submit" value="Search" />
    @Html.ActionLink("Clear search", "ContactView")

    <br />
    <br />
    <table>
        <tr>
            <th>First name</th>
            <th>Surname</th>
            <th>Date of birth</th>
            <th>Email</th>
        </tr>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.FirstName</td>
                <td>@contact.Surname</td>
                <td>@Html.DisplayFor(modelItem => contact.BirthDate)</td>
                <td>@contact.Email</td>
                <td>@Html.ActionLink("Delete", "ContactDelete", new { id = contact.Id })</td>
            </tr>
        }
    </table>
}